{
  "name": "franz-peter",
  "version": "0.2.5",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "bootstrap": "^4.5.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "custom-electron-titlebar": "^3.2.3",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-json-storage": "^4.2.0",
    "electron-store": "^6.0.0",
    "is-electron": "^2.2.0",
    "lowdb": "^1.0.0",
    "node-sass": "^4.14.1",
    "radium": "^0.26.0",
    "react": "^16.13.1",
    "react-bootstrap": "^1.1.0",
    "react-contextmenu": "^2.14.0",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-scripts": "^3.4.3",
    "react-tooltip": "^4.2.7",
    "typescript": "^3.7.5",
    "wait-on": "^5.1.0",
    "electron-reload": "^1.5.0"
  },
  "scripts": {
    "react-start": "set PORT=3005 && react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3005 && cross-env NODE_ENV=dev nodemon --exec \"\"electron .\"\"",
    "pack": "react-scripts build && electron-builder --dir",
    "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/bootstrap": "^4.5.0",
    "@types/electron": "^1.6.10",
    "@types/electron-json-storage": "^4.0.0",
    "@types/electron-store": "^3.2.0",
    "@types/jest": "^24.9.1",
    "@types/lowdb": "^1.0.9",
    "@types/node": "^12.12.48",
    "@types/react": "^16.9.41",
    "@types/react-bootstrap": "^1.0.1",
    "@types/react-dom": "^16.9.8",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "nodemon": "^2.0.4",
    "react-electron-web-view": "^2.0.1",
    "uuid-random": "^1.3.2"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.ppkk",
    "compression": "normal",
    "productName": "Peter",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg",
        "mas"
      ],
      "category": "public.app-category.news"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Franzo",
      "category": "Network;Feed"
    }
  }
}
